  "main": "dist/index.html",
  "private": true,
  "engines": {
    "node": "5.2.0",
    "npm": "3.3.12"
  },
  "scripts": {
    "build:setup": "rm -rf .dev/* dist/* && mkdir -p dist .dev",
    "build:prod": "npm run build:setup && NODE_ENV=production gulp build",
    "build:staging": "npm run build:setup && NODE_ENV=staging gulp build",
    "cleanup": "xargs rm -rf < .gitignore",
    "dev": "gulp dev",
    "test": "mocha --compilers js:babel-register,css:css-modules-require-hook --recursive source/**/__tests__/*-test.js",
    "deploy:staging": "npm run build:staging && mkdir ~/.ssh && ssh-keyscan github.com >> ~/.ssh/known_hosts && gh-pages -d dist"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "dependencies": {
    "react-dom": "^0.14.6"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "destructuring": true,
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "templateStrings": true
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
