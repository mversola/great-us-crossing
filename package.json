    "chai": "^3.4.1",
    "chai-enzyme": "^0.2.2",
    "css-modules-require-hook": "^2.1.0",
    "css-modulesify": "^0.16.1",
    "envify": "^3.4.0",
    "enzyme": "^1.4.0",
    "es3ify": "github:bradparker/es3ify#v0.2.1",
    "es6-promise": "^3.0.2",
    "express": "^4.13.3",
    "gh-pages": "^0.8.0",
    "gulp": "^3.9.1",
    "gulp-markdown-to-json": "^0.2.1",
    "gulp-rev": "^6.0.1",
    "gulp-rev-replace": "^0.4.3",
