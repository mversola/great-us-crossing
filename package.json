    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "mocha-jsdom": "^1.0.0",
    "node-static": "^0.7.7",
    "nodemon": "^1.8.1",
    "postcss-cssnext": "^2.4.0",
    "react": "^0.14.6",
    "react-addons-test-utils": "^0.14.6",
